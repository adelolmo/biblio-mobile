<?xml version='1.0' encoding='utf-8'?>
<widget id="org.ado.biblio" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Biblio</name>
    <description>
        Biblio is an application to manage your physical book library
    </description>
    <author email="andoni.delolmo@gmail.com" href="https://github.com/adelolmo/biblio-mobile">
        Andoni del Olmo
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <!--<access origin="http://bibliorest-adoorg.rhcloud.com" />-->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
