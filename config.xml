<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1" id="org.ado.biblio" version="1.0.0" xmlns="http://www.w3.org/ns/widgets">
    <name>Biblio</name>
    <description>
        Who has my book? Manage your physical book library
    </description>
    <author email="andoni.delolmo@gmail.com" href="https://github.com/adelolmo/biblio-mobile">
        Andoni del Olmo
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="16" />
        <splash density="ldpi" src="res/screen/android/splash-port-ldpi.png" />
        <splash density="mdpi" src="res/screen/android/splash-port-mdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-backbutton" spec="https://github.com/mohamed-salah/phonegap-backbutton-plugin.git#0.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.0.0" />
    <engine name="android" spec="^4.0.2" />
</widget>
